<Window x:Class="MSCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSCC"
        xmlns:vm="clr-namespace:MSCC.ViewModels"
        mc:Ignorable="d"
        Title="MSCC - Meta Search Command Center" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NullToVisibilityConverter x:Key="NullToVis"/>
        <local:NullToBoolConverter x:Key="NullToBool"/>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        
        <!-- Menü-Styles für dunkles Theme -->
        <Style x:Key="TopMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menüleiste -->
        <Menu Grid.Row="0" Background="#34495E" Padding="4">
            <MenuItem Header="Datei" Style="{StaticResource TopMenuItemStyle}">
                <MenuItem Header="Beenden" Style="{StaticResource SubMenuItemStyle}" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Plugins" Style="{StaticResource TopMenuItemStyle}">
                <MenuItem Header="Script Manager..." Style="{StaticResource SubMenuItemStyle}" Click="MenuItem_ScriptManager_Click"/>
                <Separator/>
                <MenuItem Header="Scripts neu laden" Style="{StaticResource SubMenuItemStyle}" Click="MenuItem_ReloadScripts_Click"/>
            </MenuItem>
            <MenuItem Header="Hilfe" Style="{StaticResource TopMenuItemStyle}">
                <MenuItem Header="Ueber MSCC" Style="{StaticResource SubMenuItemStyle}" Click="MenuItem_About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Header / Suchbereich -->
        <Border Grid.Row="1" Background="#2C3E50" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16" 
                         Padding="12,8"
                         VerticalContentAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <Button Grid.Column="1" 
                        Content="Suchen" 
                        Command="{Binding SearchCommand}"
                        Margin="8,0,0,0"
                        Padding="20,8"
                        FontSize="14"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"/>
                
                <Button Grid.Column="2" 
                        Content="Abbrechen" 
                        Command="{Binding CancelSearchCommand}"
                        Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        FontSize="14"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Hauptbereich -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Linke Seitenleiste: Datenquellen -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Gruppen Header mit Buttons -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Gruppen" Style="{StaticResource HeaderStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" 
                                    Command="{Binding AddGroupCommand}"
                                    ToolTip="Neue Gruppe"
                                    Width="24" Height="24" 
                                    FontSize="14" FontWeight="Bold"
                                    Background="#27AE60" Foreground="White" 
                                    BorderThickness="0" Padding="0"/>
                            <Button Content="E" 
                                    Command="{Binding EditGroupCommand}"
                                    ToolTip="Gruppe bearbeiten"
                                    Width="24" Height="24" 
                                    FontSize="12"
                                    Background="#3498DB" Foreground="White" 
                                    BorderThickness="0" Padding="0"
                                    Margin="4,0,0,0"/>
                            <Button Content="X" 
                                    Command="{Binding DeleteGroupCommand}"
                                    ToolTip="Gruppe loeschen"
                                    Width="24" Height="24" 
                                    FontSize="12"
                                    Background="#E74C3C" Foreground="White" 
                                    BorderThickness="0" Padding="0"
                                    Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Gruppen Liste -->
                    <ListBox Grid.Row="2" 
                             ItemsSource="{Binding Groups}"
                             SelectedItem="{Binding SelectedGroup}"
                             BorderThickness="0"
                             MaxHeight="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                          Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="12" Height="12" 
                                                 Fill="{Binding Group.Color}" 
                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Group.Name}"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Datenquellen Header mit Buttons -->
                    <Grid Grid.Row="3" Margin="0,16,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Datenquellen" Style="{StaticResource HeaderStyle}" Margin="0"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" 
                                    Command="{Binding AddDataSourceCommand}"
                                    ToolTip="Neue Datenquelle"
                                    Width="24" Height="24" 
                                    FontSize="14" FontWeight="Bold"
                                    Background="#27AE60" Foreground="White" 
                                    BorderThickness="0" Padding="0"/>
                            <Button Content="E" 
                                    Command="{Binding EditDataSourceCommand}"
                                    ToolTip="Datenquelle bearbeiten"
                                    Width="24" Height="24" 
                                    FontSize="12"
                                    Background="#3498DB" Foreground="White" 
                                    BorderThickness="0" Padding="0"
                                    Margin="4,0,0,0"/>
                            <Button Content="X" 
                                    Command="{Binding DeleteDataSourceCommand}"
                                    ToolTip="Datenquelle loeschen"
                                    Width="24" Height="24" 
                                    FontSize="12"
                                    Background="#E74C3C" Foreground="White" 
                                    BorderThickness="0" Padding="0"
                                    Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Datenquellen Liste -->
                    <ListBox Grid.Row="5" 
                             ItemsSource="{Binding DataSources}"
                             SelectedItem="{Binding SelectedDataSource}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                          Margin="4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DataSource.Name}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding DataSource.Description}" 
                                                   FontSize="11" 
                                                   Foreground="Gray"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Mitte: Suchergebnisse und Detailansicht nebeneinander -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Ergebnisliste -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Suchergebnisse" Style="{StaticResource HeaderStyle}"/>
                        
                        <!-- Ladeindikator -->
                        <StackPanel Grid.Row="1" 
                                    Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                            <TextBlock Text="Suche laeuft..." 
                                       HorizontalAlignment="Center" 
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                        
                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding SearchResults}"
                                 SelectedItem="{Binding SelectedResult}"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="8" 
                                            Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Titel und Relevanz -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Result.Title}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="13"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <Border Grid.Column="1" 
                                                        Background="#27AE60" 
                                                        CornerRadius="2" 
                                                        Padding="6,2">
                                                    <TextBlock Text="{Binding Result.RelevanceScore, StringFormat={}{0}%}" 
                                                               Foreground="White" 
                                                               FontSize="11"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Beschreibung -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding Result.Description}" 
                                                       Foreground="Gray" 
                                                       FontSize="12"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0"/>
                                            
                                            <!-- Quelle und Konnektor -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Result.SourceName}" 
                                                           Foreground="#7F8C8D" 
                                                           FontSize="11"/>
                                                <TextBlock Text=" | " 
                                                           Foreground="#BDC3C7" 
                                                           FontSize="11"/>
                                                <Border Background="#9B59B6" 
                                                        CornerRadius="2" 
                                                        Padding="4,1">
                                                    <TextBlock Text="{Binding Result.ConnectorId}" 
                                                               Foreground="White" 
                                                               FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <!-- Labels -->
                                            <ItemsControl Grid.Row="3" 
                                                          ItemsSource="{Binding Labels}" 
                                                          Margin="0,4,0,0">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#3498DB" 
                                                                CornerRadius="10" 
                                                                Padding="8,3" 
                                                                Margin="0,0,4,4">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Keyword}" 
                                                                           Foreground="White" 
                                                                           FontSize="11"/>
                                                                <Button Content="x" 
                                                                        Command="{Binding DataContext.RemoveLabelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                        CommandParameter="{Binding}"
                                                                        Background="Transparent"
                                                                        Foreground="White"
                                                                        BorderThickness="0"
                                                                        Padding="4,0,0,0"
                                                                        FontSize="11"
                                                                        Cursor="Hand"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Detailansicht -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Detailansicht" Style="{StaticResource HeaderStyle}"/>
                        
                        <!-- Platzhalter wenn nichts ausgewählt -->
                        <TextBlock Grid.Row="1" 
                                   Text="Wählen Sie ein Suchergebnis aus, um Details anzuzeigen."
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Visibility="{Binding SelectedResult, Converter={StaticResource NullToVis}, ConverterParameter=Invert}"/>
                        
                        <ContentControl Grid.Row="1" 
                                        x:Name="DetailViewContainer"
                                        Visibility="{Binding SelectedResult, Converter={StaticResource NullToVis}}"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Rechte Seitenleiste: Labels und gespeicherte Abfragen -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Label hinzufuegen -->
                    <TextBlock Grid.Row="0" Text="Label hinzufuegen" Style="{StaticResource HeaderStyle}"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SelectedResult.NewLabel, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,6"
                                 IsEnabled="{Binding SelectedResult, Converter={StaticResource NullToBool}}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding AddLabelCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1" 
                                Content="+" 
                                Command="{Binding AddLabelCommand}"
                                Padding="12,6"
                                Margin="4,0,0,0"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"/>
                    </Grid>
                    <TextBlock Grid.Row="2" 
                               Text="Waehlen Sie ein Ergebnis aus"
                               FontSize="11"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Margin="0,4,0,16"/>
                    
                    <!-- Keyword-Suche -->
                    <TextBlock Grid.Row="3" Text="Keyword-Suche" Style="{StaticResource HeaderStyle}"/>
                    <StackPanel Grid.Row="3" Margin="0,24,0,0">
                        <TextBox x:Name="KeywordSearchBox" Padding="8,6"/>
                        <Button Content="Nach Keyword suchen"
                                Command="{Binding SearchByKeywordCommand}"
                                CommandParameter="{Binding Text, ElementName=KeywordSearchBox}"
                                Margin="0,8,0,0"
                                Padding="8,6"/>
                    </StackPanel>
                    
                    <!-- Abfrage speichern -->
                    <StackPanel Grid.Row="4" Margin="0,16,0,0">
                        <TextBlock Text="Aktuelle Abfrage" Style="{StaticResource HeaderStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="QueryNameBox" Padding="8,6" Text="Meine Abfrage"/>
                            <Button Grid.Column="1" 
                                    Content="Speichern"
                                    Command="{Binding SaveQueryCommand}"
                                    CommandParameter="{Binding Text, ElementName=QueryNameBox}"
                                    Padding="12,6"
                                    Margin="4,0,0,0"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Gespeicherte Abfragen -->
                    <TextBlock Grid.Row="5" Text="Gespeicherte Abfragen" Style="{StaticResource HeaderStyle}" Margin="0,16,0,8"/>
                    <ListBox Grid.Row="5" 
                             ItemsSource="{Binding SavedQueries}"
                             BorderThickness="0"
                             Margin="0,32,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="4" 
                                        Margin="0,0,0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding SearchTerm, StringFormat=Suche: {0}}" 
                                                       FontSize="11" 
                                                       Foreground="Gray"/>
                                            <TextBlock Text="{Binding Labels.Count, StringFormat={}{0} Labels}" 
                                                       FontSize="11" 
                                                       Foreground="#3498DB"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" 
                                                Content="Laden"
                                                Command="{Binding DataContext.LoadQueryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Id}"
                                                Padding="8,4"
                                                FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Statusleiste -->
        <Border Grid.Row="3" Background="#34495E" Padding="12,8">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window>
