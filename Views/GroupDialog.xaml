<Window x:Class="MSCC.Views.GroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group" 
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/app-icon.ico">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock x:Name="NameLabel" Text="Name:" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox x:Name="NameTextBox" Padding="8,6"/>
        </StackPanel>
        
        <!-- Beschreibung -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Description:" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox x:Name="DescriptionTextBox" Padding="8,6" TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
        </StackPanel>
        
        <!-- Farbe -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock x:Name="ColorLabel" Text="Color:" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ColorComboBox" Width="200" Padding="8,6">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" Margin="0,0,8,0">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Ellipse x:Name="ColorPreview" Width="24" Height="24" Margin="12,0,0,0"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" 
                    Padding="16,8" 
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" 
                    Padding="16,8"
                    Background="#27AE60"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
