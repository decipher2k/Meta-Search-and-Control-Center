<Window x:Class="MSCC.Views.ScriptManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Manager" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Icon="/app-icon.ico">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Neues Script erstellen -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Text="{Binding NewScriptName, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" Padding="8,6"
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="NewScriptButton" Content="+ New Script"
                            Command="{Binding CreateCommand}"
                            Margin="8,0,0,0"
                            Padding="16,8"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
                
                <!-- Aktionen -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="CompileAllButton" Content="Compile"
                            Command="{Binding CompileAllCommand}"
                            Padding="12,8"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,8,0"/>
                    <Button Command="{Binding RefreshCommand}"
                            Padding="12,8"
                            Margin="0,0,8,0"
                            Content="&#x21BB;"
                            FontSize="16"
                            ToolTip="Refresh"/>
                    <Button Command="{Binding OpenFolderCommand}"
                            Padding="12,8"
                            Content="&#x1F4C1;"
                            ToolTip="Open Folder"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Hauptbereich -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Script-Liste -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Connector Scripts" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <!-- Lade-Indikator -->
                    <StackPanel Grid.Row="1" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                        <TextBlock x:Name="LoadingText" Text="Loading..." HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Scripts}"
                              SelectedItem="{Binding SelectedScript}"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status-Indikator -->
                                        <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,12,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#95A5A6"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCompiled}" Value="True">
                                                            <Setter Property="Fill" Value="#27AE60"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Metadata.IsEnabled}" Value="False">
                                                            <Setter Property="Fill" Value="#BDC3C7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        
                                        <!-- Script-Info -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Metadata.Name}" 
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{Binding Metadata.Description}" 
                                                       Foreground="Gray" FontSize="12"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Metadata.Version, StringFormat=v{0}}" 
                                                           FontSize="11" Foreground="#7F8C8D"/>
                                                <TextBlock Text=" | " Foreground="#BDC3C7"/>
                                                <TextBlock Text="{Binding Metadata.ModifiedAt, StringFormat={}{0:g}}" 
                                                           FontSize="11" Foreground="#7F8C8D"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Fehler-Anzeige -->
                                        <Border Grid.Column="2" Background="#E74C3C" CornerRadius="4" 
                                                Padding="8,4" VerticalAlignment="Center"
                                                Visibility="{Binding CompilationErrors.Count, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="{Binding CompilationErrors.Count, StringFormat={}{0}}" 
                                                       Foreground="White" FontSize="11"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Aktionen-Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <Button x:Name="EditButton" Content="Edit"
                            Command="{Binding EditCommand}"
                            Padding="12,10"
                            Margin="0,0,0,8"
                            HorizontalContentAlignment="Left"/>
                    
                    <Button x:Name="CompileButton" Content="Compile"
                            Command="{Binding CompileCommand}"
                            Padding="12,10"
                            Margin="0,0,0,8"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"/>
                    
                    <Button x:Name="SaveButton" Content="Save"
                            Command="{Binding SaveCommand}"
                            Padding="12,10"
                            Margin="0,0,0,8"
                            HorizontalContentAlignment="Left"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <Button x:Name="ToggleButton" Content="Toggle"
                            Command="{Binding ToggleEnabledCommand}"
                            Padding="12,10"
                            Margin="0,8,0,8"
                            HorizontalContentAlignment="Left"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <Button Content="Import..."
                            Command="{Binding ImportCommand}"
                            Padding="12,10"
                            Margin="0,8,0,8"
                            HorizontalContentAlignment="Left"/>
                    
                    <Button Content="Export..."
                            Command="{Binding ExportCommand}"
                            Padding="12,10"
                            Margin="0,0,0,8"
                            HorizontalContentAlignment="Left"/>
                    
                    <Separator Margin="0,8"/>
                    
                    <Button x:Name="DeleteButton" Content="Delete"
                            Command="{Binding DeleteCommand}"
                            Padding="12,10"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"/>
                    
                    <!-- Script-Details -->
                    <Border Margin="0,24,0,0" Background="#F8F9FA" Padding="12" CornerRadius="4"
                            Visibility="{Binding HasSelection, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <TextBlock Text="Details" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding SelectedScript.Metadata.Author, StringFormat=Author: {0}}" 
                                       FontSize="12" Margin="0,2"/>
                            <TextBlock Text="{Binding SelectedScript.FilePath, StringFormat=Path: {0}}" 
                                       FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Statusleiste -->
        <Border Grid.Row="2" Background="#34495E" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="{Binding ScriptsDirectory}" 
                           Foreground="#BDC3C7" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
